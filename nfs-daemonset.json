{
  "kind": "DaemonSet",
  "apiVersion": "extensions/v1beta1",
  "metadata": {
    "name": "nfs-ganesha",
    "labels": {
      "nfs-ganesha": "deployment"
    },
    "annotations": {
      "description": "nfs-ganesha Daemon Set",
      "tags": "nfs-ganesha"
    }
  },
  "spec": {
    "template": {
      "metadata": {
        "name": "nfs-ganesha",
        "labels": {
          "nfs-ganesha-node": "daemonset"
        }
      },
      "spec": {
        "nodeSelector": {
          "storagenode": "nfs-ganesha"
        },
        "hostNetwork": true,
        "containers": [
          {
            "image": "quay.io/luis_pabon0/ganesha",
            "imagePullPolicy": "Always",
            "name": "nfs-ganesha",
            "volumeMounts": [
              {
                "name": "nfs-ganesha-exports",
                "mountPath": "/exports"
              }
            ],
            "securityContext": {
              "capabilities": {},
              "privileged": true
            }
          }
        ],
        "volumes": [
          {
            "name": "nfs-ganesha-exports",
            "hostPath": {
              "path": "/exports"
            }
          }
        ]
      }
    }
  }
}